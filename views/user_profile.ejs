<link rel="stylesheet" href="/css/user_profile.css">
<h1>
    Codeial / Profile Page
</h1>
<% if (user.id==profile_user.id) { %>
    <form action="/users/update/<%= profile_user.id%>" method="POST" enctype="multipart/form-data">
    <input type="text" name="name" placeholder="your name" value="<%= profile_user.name %>">
    <input type="email" name="email" placeholder="your email" value="<%= profile_user.email %>">
    <input type="file" name="avatar" placeholder="Profile Pic">
    <input type="submit" value="Update">
    </form>
 
<% }else{%>
 

<p><%= profile_user.name %></p>
<p><%= profile_user.email %></p>
 <%} %>







